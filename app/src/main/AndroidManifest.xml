<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilkom.vviped">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoStatusBar"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false">

        <activity
            android:name=".SearchProduct"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".EditProduct" />
        <activity android:name=".settings.ContactMaura" />
        <activity android:name=".settings.ContactOcta" />
        <activity android:name=".settings.ContactAtikah" />
        <activity android:name=".settings.SettingsContactInstagram" />
        <activity android:name=".splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroSlider"
            android:noHistory="true" />
        <activity
            android:name=".model.login.Logout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadSellingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".UserLogin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".UserRegister"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:hardwareAccelerated="true"/>
        <activity
            android:name=".create_campaign"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ChatForBuying" />
        <activity android:name=".settings.SettingsContactUs" />
        <activity android:name=".settings.SettingsAbout" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".CategoriesProduct" />
        <activity android:name=".EditProfileUser" />
        <activity android:name=".Landing" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>